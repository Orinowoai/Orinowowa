<svg width="200" height="200" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="goldGradient" cx="50%" cy="30%" r="60%">
      <stop offset="0%" stop-color="#FFD700"/>
      <stop offset="50%" stop-color="#F7C94A"/>
      <stop offset="100%" stop-color="#B8860B"/>
    </radialGradient>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/> 
      </feMerge> 
    </filter>
  </defs>
  
  <!-- Main circle (Buddha-like head) -->
  <circle cx="100" cy="100" r="80" fill="url(#goldGradient)" stroke="#D4AF37" stroke-width="2" filter="url(#glow)"/>
  
  <!-- Inner serene face circle -->
  <circle cx="100" cy="100" r="60" fill="#FFE55C" opacity="0.8"/>
  
  <!-- Headphone band -->
  <path d="M 50 80 Q 100 50 150 80" stroke="#8B4513" stroke-width="8" fill="none" stroke-linecap="round"/>
  
  <!-- Left headphone -->
  <circle cx="70" cy="90" r="15" fill="#8B4513" stroke="#654321" stroke-width="2"/>
  <circle cx="70" cy="90" r="10" fill="#A0522D"/>
  
  <!-- Right headphone -->
  <circle cx="130" cy="90" r="15" fill="#8B4513" stroke="#654321" stroke-width="2"/>
  <circle cx="130" cy="90" r="10" fill="#A0522D"/>
  
  <!-- Serene eyes -->
  <ellipse cx="85" cy="95" rx="3" ry="1.5" fill="#8B4513" opacity="0.7"/>
  <ellipse cx="115" cy="95" rx="3" ry="1.5" fill="#8B4513" opacity="0.7"/>
  
  <!-- Gentle smile -->
  <path d="M 90 115 Q 100 125 110 115" stroke="#8B4513" stroke-width="2" fill="none" stroke-linecap="round" opacity="0.7"/>
  
  <!-- Audio waves emanating -->
  <path d="M 40 100 Q 35 95 30 100 Q 35 105 40 100" stroke="#F7C94A" stroke-width="2" fill="none" opacity="0.5"/>
  <path d="M 160 100 Q 165 95 170 100 Q 165 105 160 100" stroke="#F7C94A" stroke-width="2" fill="none" opacity="0.5"/>
</svg>